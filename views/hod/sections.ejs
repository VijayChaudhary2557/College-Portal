<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-diagram-3"></i></span>
                Section Management
            </h1>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-plus-circle"></i> Create Section</h2>
                    </div>
                    <div class="p-6">
                        <form action="/hod/sections" method="POST" class="space-y-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Section Name</label>
                                <input type="text" name="name" placeholder="e.g., MCA-A" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Year</label>
                                <select name="year" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                                    <option value="1">First Year</option>
                                    <option value="2">Second Year</option>
                                    <option value="3">Third Year</option>
                                    <option value="4">Fourth Year</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Class Advisor</label>
                                <select name="classAdvisor" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                                    <option value="">Select Class Advisor...</option>
                                    <% classAdvisors.forEach(advisor => { %>
                                        <option value="<%= advisor._id %>"><%= advisor.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <button type="submit" class="w-full py-3 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">Create Section</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="lg:col-span-2">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-emerald-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-list"></i> All Sections</h2>
                    </div>
                    <div class="p-6 overflow-x-auto">
                        <table class="w-full text-left">
                            <thead>
                                <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                                    <th class="pb-3 pr-4">Name</th>
                                    <th class="pb-3 pr-4">Year</th>
                                    <th class="pb-3">Class Advisor</th>
                                </tr>
                            </thead>
                            <tbody class="table-row-hover">
                                <% sections.forEach(section => { %>
                                    <tr class="border-b border-slate-100">
                                        <td class="py-3 pr-4 font-medium"><%= section.name %></td>
                                        <td class="py-3 pr-4">Year <%= section.year %></td>
                                        <td class="py-3"><%= section.classAdvisor ? section.classAdvisor.name : '-' %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
