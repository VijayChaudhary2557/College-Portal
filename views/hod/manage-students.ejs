<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-person-check"></i></span>
                Assign Students to Section
            </h1>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-person-plus"></i> Assign Section</h2>
            </div>
            <div class="p-6">
                <form action="/hod/sections/assign-student" method="POST">
                    <div class="mb-4">
                        <div class="flex items-center gap-2 mb-2">
                            <input type="checkbox" id="selectAll" class="w-4 h-4 rounded border-2 border-primary-400 text-primary-600 focus:ring-primary-500 cursor-pointer">
                            <label for="selectAll" class="font-semibold text-slate-700">Select All Students</label>
                        </div>
                        <div class="p-4 rounded-xl border-2 border-slate-200 max-h-52 overflow-y-auto space-y-2">
                            <% students.forEach(s => { %>
                                <div class="flex items-center gap-2">
                                    <input type="checkbox" name="studentIds[]" value="<%= s._id %>" id="stu_<%= s._id %>" class="student-checkbox w-4 h-4 rounded border-2 border-slate-300 text-primary-600 focus:ring-primary-500">
                                    <label for="stu_<%= s._id %>" class="text-slate-700 cursor-pointer"><%= s.name %></label>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Section</label>
                        <select name="sectionId" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <option value="">Select Section...</option>
                            <% sections.forEach(sec => { %>
                                <option value="<%= sec._id %>"><%= sec.name %> (Year <%= sec.year %>)</option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="w-full py-3 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">Assign Section</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('selectAll').addEventListener('change', function() {
    document.querySelectorAll('.student-checkbox').forEach(cb => { cb.checked = this.checked; });
});
</script>

<%- include('../partials/footer') %>
