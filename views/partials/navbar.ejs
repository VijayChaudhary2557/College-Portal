<% if (typeof user !== 'undefined' && user) { %>
<nav class="bg-slate-900/95 backdrop-blur-md shadow-lg border-b border-slate-700/50 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <a href="/dashboard" class="flex items-center gap-2 text-white font-bold text-xl tracking-tight hover:text-primary-300 transition-colors">
                <span class="w-9 h-9 rounded-lg bg-primary-500 flex items-center justify-center"><i class="bi bi-mortarboard-fill text-white"></i></span>
                College Portal
            </a>
            
            <div class="hidden md:flex items-center gap-1">
                <a href="/dashboard" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2">
                    <i class="bi bi-house-door"></i> Dashboard
                </a>
                <% if (user.position === 'admin') { %>
                    <a href="/admin/courses" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-book"></i> Courses</a>
                    <a href="/admin/faculty" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-people"></i> Faculty</a>
                    <a href="/admin/admissions" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-person-plus"></i> Admissions</a>
                <% } else if (user.position === 'student' || user.role === 'student') { %>
                    <a href="/student/leave" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-calendar-check"></i> Leave</a>
                    <a href="/student/resume" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-file-text"></i> Resume</a>
                    <a href="/student/notifications" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2 relative">
                        <i class="bi bi-bell"></i> 
                        <span>Notifications</span>
                        <% if (typeof unreadNotificationCount !== 'undefined' && unreadNotificationCount > 0) { %>
                            <span class="absolute -top-1 -right-2 inline-flex items-center justify-center w-5 h-5 text-xs font-bold text-white bg-red-500 rounded-full">
                                <%= unreadNotificationCount > 9 ? '9+' : unreadNotificationCount %>
                            </span>
                        <% } %>
                    </a>
                    <a href="/student/placements" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-briefcase"></i> Placements</a>
                <% } else if (user.position === 'hod') { %>
                    <a href="/hod/sections" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-diagram-3"></i> Sections</a>
                <% } else if (user.position === 'coordinator') { %>
                    <a href="/coordinator/subjects" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-book"></i> Subjects</a>
                    <a href="/coordinator/timetable" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-calendar3"></i> Timetable</a>
                <% } else if (user.role === 'faculty') { %>
                    <a href="/faculty/schedule" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-clock-history"></i> Leave</a>
                <% } else if (user.position === 'placement-manager') { %>
                    <a href="/placement/create" class="px-4 py-2 rounded-lg text-slate-300 hover:text-white hover:bg-slate-700/50 transition-all flex items-center gap-2"><i class="bi bi-plus-circle"></i> Create Placement</a>
                <% } %>
                
                <div class="relative ml-2" id="user-dropdown-wrap">
                    <button type="button" id="user-dropdown-btn" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-700/60 text-white hover:bg-slate-600 transition-all border border-slate-600">
                        <i class="bi bi-person-circle text-lg"></i>
                        <span class="max-w-[120px] truncate"><%= user.name %></span>
                        <i class="bi bi-chevron-down text-xs"></i>
                    </button>
                    <div id="user-dropdown-menu" class="hidden absolute right-0 mt-2 w-48 rounded-xl bg-white shadow-xl border border-slate-200 py-1 z-50">
                        <a href="/auth/logout" class="flex items-center gap-2 px-4 py-2.5 text-slate-700 hover:bg-red-50 hover:text-red-600 transition-colors">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center gap-2">
                <button type="button" id="mobile-menu-btn" class="p-2 rounded-lg text-slate-300 hover:bg-slate-700/50">
                    <i class="bi bi-list text-2xl"></i>
                </button>
                <div class="relative" id="mobile-dropdown">
                    <button type="button" class="flex items-center gap-2 px-3 py-2 rounded-lg bg-slate-700/60 text-white">
                        <i class="bi bi-person-circle"></i>
                        <span class="max-w-[80px] truncate text-sm"><%= user.name %></span>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile menu (hidden by default) -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-slate-700/50 mt-2 pt-4">
            <div class="flex flex-col gap-1">
                <a href="/dashboard" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-house-door"></i> Dashboard</a>
                <% if (user.position === 'admin') { %>
                    <a href="/admin/courses" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-book"></i> Courses</a>
                    <a href="/admin/faculty" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-people"></i> Faculty</a>
                    <a href="/admin/admissions" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-person-plus"></i> Admissions</a>
                <% } else if (user.position === 'student' || user.role === 'student') { %>
                    <a href="/student/leave" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-calendar-check"></i> Leave</a>
                    <a href="/student/notifications" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2 relative">
                        <i class="bi bi-bell"></i> 
                        <span>Notifications</span>
                        <% if (typeof unreadNotificationCount !== 'undefined' && unreadNotificationCount > 0) { %>
                            <span class="inline-flex items-center justify-center ml-2 px-2 py-0.5 text-xs font-bold text-white bg-red-500 rounded-full">
                                <%= unreadNotificationCount > 9 ? '9+' : unreadNotificationCount %>
                            </span>
                        <% } %>
                    </a>
                    <a href="/student/placements" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-briefcase"></i> Placements</a>
                <% } else if (user.position === 'hod') { %>
                    <a href="/hod/sections" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-diagram-3"></i> Sections</a>
                <% } else if (user.position === 'coordinator') { %>
                    <a href="/coordinator/subjects" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-book"></i> Subjects</a>
                    <a href="/coordinator/timetable" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-calendar3"></i> Timetable</a>
                <% } else if (user.role === 'faculty') { %>
                    <a href="/faculty/schedule" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-clock-history"></i> Leave</a>
                <% } else if (user.position === 'placement-manager') { %>
                    <a href="/placement/create" class="px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-700/50 flex items-center gap-2"><i class="bi bi-plus-circle"></i> Create Placement</a>
                <% } %>
                <a href="/auth/logout" class="px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 flex items-center gap-2"><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>
        </div>
    </div>
</nav>
<script>
(function() {
    var btn = document.getElementById('mobile-menu-btn');
    var menu = document.getElementById('mobile-menu');
    if (btn && menu) btn.addEventListener('click', function() { menu.classList.toggle('hidden'); });
    var dropBtn = document.getElementById('user-dropdown-btn');
    var dropMenu = document.getElementById('user-dropdown-menu');
    if (dropBtn && dropMenu) {
        dropBtn.addEventListener('click', function(e) { e.stopPropagation(); dropMenu.classList.toggle('hidden'); });
        document.addEventListener('click', function() { dropMenu.classList.add('hidden'); });
    }
})();
</script>
<% } %>
