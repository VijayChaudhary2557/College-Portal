    <!-- Bootstrap JS (for modal if used on page) -->
 <style>
    #toast-container.toast-top-right {
    .toast-success {
    background-color: #0f766e !important; /* teal / green */
    color: #ffffff !important;
  }

  /* Error toast */
  .toast-error {
    background-color: #b91c1c !important; /* dark red */
    color: #ffffff !important;
  }

  /* Optional: toast shadow & border radius */
  .toast {
    border-radius: 10px !important;
    box-shadow: 0 10px 25px rgba(0,0,0,0.25) !important;
    font-size: 14px;
  }
  }
 </style>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        toastr.options = { closeButton: true, progressBar: true, positionClass: "toast-top-right", timeOut: 5000 };
        <% if (typeof success_msg !== 'undefined' && success_msg) { %> toastr.success('<%= success_msg %>'); <% } %>
        <% if (typeof error_msg !== 'undefined' && error_msg) { %> toastr.error('<%= error_msg %>'); <% } %>
    </script>
    <script> setTimeout(function() { location.reload(); }, 300000); </script>
