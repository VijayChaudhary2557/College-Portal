<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-plus-circle"></i></span>
                Create Placement
            </h1>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
            <div class="p-6 sm:p-8">
                <form action="/placement/create" method="POST" class="space-y-5">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Company Name *</label>
                            <input type="text" name="companyName" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Job Title *</label>
                            <input type="text" name="jobTitle" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Description</label>
                        <textarea name="description" rows="3" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none"></textarea>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Location *</label>
                            <input type="text" name="location" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">CTC *</label>
                            <input type="text" name="ctc" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                        </div>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Graduation Marks (%)</label>
                            <input type="number" name="graduationMarks" min="0" max="100" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">12th Marks (%)</label>
                            <input type="number" name="twelfthMarks" min="0" max="100" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Position</label>
                            <input type="text" name="position" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Knowledge/Skills (comma separated)</label>
                        <input type="text" name="knowledge" placeholder="e.g., Java, Python, SQL" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Eligible Courses *</label>
                        <select name="eligibleCourses" multiple required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <% courses.forEach(course => { %>
                                <option value="<%= course._id %>"><%= course.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Drive Date *</label>
                            <input type="date" name="driveDate" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Last Date to Apply *</label>
                            <input type="date" name="lastDateToApply" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        </div>
                    </div>
                    <button type="submit" class="w-full sm:w-auto px-8 py-3.5 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">
                        Create Placement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
