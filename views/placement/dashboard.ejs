<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8 flex flex-wrap items-center justify-between gap-4">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-speedometer2"></i></span>
                Placement Manager Dashboard
            </h1>
            <a href="/placement/create" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">
                <i class="bi bi-plus-circle"></i> Create New Placement
            </a>
        </div>

        <div class="rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 p-6 text-white shadow-soft border border-emerald-400/20 mb-8 inline-block">
            <div class="flex items-center gap-4">
                <span class="w-14 h-14 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-briefcase text-2xl"></i></span>
                <div>
                    <p class="text-emerald-100 text-sm font-medium">Total Placements</p>
                    <p class="text-4xl font-bold"><%= placements.length %></p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% placements.forEach(placement => { %>
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden card-hover">
                    <div class="px-6 py-4 bg-gradient-to-r from-primary-500 to-primary-700 text-white">
                        <h3 class="text-lg font-bold"><%= placement.companyName %></h3>
                    </div>
                    <div class="p-6 space-y-3">
                        <p class="font-semibold text-slate-800"><%= placement.jobTitle %></p>
                        <p class="text-slate-600 text-sm flex items-center gap-2"><i class="bi bi-geo-alt text-primary-500"></i> <%= placement.location %></p>
                        <p class="text-slate-600 text-sm flex items-center gap-2"><i class="bi bi-currency-dollar text-primary-500"></i> <%= placement.ctc %></p>
                        <p class="text-slate-600 text-sm flex items-center gap-2"><i class="bi bi-calendar-event text-primary-500"></i> <%= new Date(placement.driveDate).toLocaleDateString() %></p>
                        <div class="flex items-center justify-between pt-2">
                            <span class="inline-flex px-3 py-1 rounded-lg bg-sky-100 text-sky-700 text-sm font-medium"><%= placement.applications.length %> Applications</span>
                            <a href="/placement/<%= placement._id %>/applications" class="text-primary-600 hover:text-primary-700 font-semibold text-sm flex items-center gap-1">View <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
