<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<style>
  @keyframes notificationGlow {
    0% {
      box-shadow: 0 0 10px rgba(34, 197, 94, 0.5), 0 0 20px rgba(34, 197, 94, 0.3);
    }
    50% {
      box-shadow: 0 0 20px rgba(34, 197, 94, 0.8), 0 0 40px rgba(34, 197, 94, 0.5);
    }
    100% {
      box-shadow: 0 0 10px rgba(34, 197, 94, 0.5), 0 0 20px rgba(34, 197, 94, 0.3);
    }
  }

  @keyframes pulseGlow {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes slideOut {
    0% {
      opacity: 1;
      max-height: 200px;
    }
    100% {
      opacity: 0.5;
      max-height: 200px;
    }
  }

  @keyframes checkmark {
    0% {
      transform: scale(0) rotate(-45deg);
      opacity: 0;
    }
    50% {
      transform: scale(1.2) rotate(0deg);
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  .glow-notification {
    animation: notificationGlow 2s ease-in-out infinite, pulseGlow 2s ease-in-out infinite;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(34, 197, 94, 0.05) 100%);
    border: 2px solid rgba(34, 197, 94, 0.6);
  }

  .glow-dot {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #22c55e;
    animation: pulseGlow 2s ease-in-out infinite;
    margin-right: 8px;
  }

  .notification-item {
    transition: all 0.5s ease;
    position: relative;
  }

  .notification-item:hover {
    transform: translateX(4px);
  }

  .read-notification {
    background: linear-gradient(135deg, rgba(71, 85, 105, 0.35) 0%, rgba(51, 65, 85, 0.25) 100%) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px solid rgba(125, 145, 175, 0.5) !important;
    border-left: 5px solid rgba(59, 130, 246, 0.75) !important;
    animation: slideOut 0.6s ease-out forwards;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), inset 0 1px 1px rgba(255, 255, 255, 0.1);
  }

  .read-notification::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5px;
    background: linear-gradient(180deg, rgba(59, 130, 246, 0.9) 0%, rgba(99, 165, 255, 0.4) 100%);
    border-radius: 16px 0 0 16px;
  }

  .read-notification .notification-item {
    opacity: 0.95;
  }

  .read-notification:hover {
    background: linear-gradient(135deg, rgba(80, 100, 130, 0.45) 0%, rgba(60, 80, 110, 0.35) 100%) !important;
    border-left: 5px solid rgba(99, 165, 255, 0.9) !important;
    transform: translateX(4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.15);
  }

  .checkmark-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border-radius: 50%;
    color: white;
    font-size: 12px;
    margin-right: 6px;
    animation: checkmark 0.5s ease-out forwards;
    box-shadow: 0 2px 8px rgba(34, 197, 94, 0.4);
  }
</style>

<div class="min-h-screen gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between gap-4">
                <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                    <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-bell"></i></span>
                    Notifications
                </h1>
                <% if (unreadNotificationCount > 0) { %>
                    <span class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-emerald-500/20 text-emerald-300 text-sm font-semibold border border-emerald-400/40">
                        <span class="glow-dot"></span>
                        <%= unreadNotificationCount %> New
                    </span>
                <% } %>
            </div>
        </div>

        <!-- Notifications List -->
        <% if (notifications && notifications.length > 0) { %>
            <div class="space-y-3">
                <% notifications.forEach(notif => { %>
                    <div class="notification-item rounded-2xl backdrop-blur shadow-soft overflow-hidden <%= notif.isRead ? 'read-notification' : 'glow-notification' %>">
                        <div class="px-6 py-4 flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <!-- Title and Type Badge -->
                                <div class="flex items-center gap-3 mb-2">
                                    <% if (!notif.isRead) { %>
                                        <span class="glow-dot"></span>
                                    <% } else { %>
                                        <span class="inline-flex items-center justify-center w-5 h-5 rounded-full bg-blue-500/30 text-blue-300 text-xs">
                                            <i class="bi bi-check2"></i>
                                        </span>
                                    <% } %>
                                    <h3 class="font-bold text-lg <%= notif.isRead ? 'text-slate-200' : 'text-white' %>">
                                        <%= notif.title %>
                                    </h3>
                                    <% if (notif.type === 'warning') { %>
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-lg bg-amber-500/20 text-amber-200 text-xs font-semibold border border-amber-400/40">
                                            <i class="bi bi-exclamation-circle text-sm mr-1"></i> Urgent
                                        </span>
                                    <% } else if (notif.type === 'success') { %>
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-lg bg-emerald-500/20 text-emerald-200 text-xs font-semibold border border-emerald-400/40">
                                            <i class="bi bi-check-circle text-sm mr-1"></i> Success
                                        </span>
                                    <% } else if (notif.type === 'error') { %>
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-lg bg-red-500/20 text-red-200 text-xs font-semibold border border-red-400/40">
                                            <i class="bi bi-x-circle text-sm mr-1"></i> Alert
                                        </span>
                                    <% } else { %>
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-lg bg-blue-500/20 text-blue-200 text-xs font-semibold border border-blue-400/40">
                                            <i class="bi bi-info-circle text-sm mr-1"></i> Info
                                        </span>
                                    <% } %>
                                </div>

                                <!-- Message -->
                                <p class="<%= notif.isRead ? 'text-slate-300' : 'text-white' %> text-sm leading-relaxed mb-3">
                                    <%= notif.message %>
                                </p>

                                <!-- Timestamp and Placement Info -->
                                <div class="flex items-center gap-4 text-xs <%= notif.isRead ? 'text-slate-400' : 'text-slate-300' %>">
                                    <span class="flex items-center gap-1">
                                        <i class="bi bi-clock text-sm"></i>
                                        <%= new Date(notif.createdAt).toLocaleDateString('en-US', { 
                                            month: 'short', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </span>
                                    <% if (notif.placement) { %>
                                        <span class="flex items-center gap-1">
                                            <i class="bi bi-building text-sm"></i>
                                            <%= notif.placement.companyName || 'Placement' %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Mark as Read Button -->
                            <% if (!notif.isRead) { %>
                                <button class="mark-read-btn px-3 py-2 rounded-lg bg-emerald-500/20 hover:bg-emerald-500/40 text-emerald-300 text-sm font-medium transition-all border border-emerald-400/40 whitespace-nowrap" data-notification-id="<%= notif._id %>">
                                    <i class="bi bi-check-lg"></i> Mark Read
                                </button>
                            <% } else { %>
                                <span class="px-3 py-2 rounded-lg bg-slate-700/30 text-slate-400 text-sm font-medium border border-slate-600/30">
                                    <i class="bi bi-check-all"></i> Read
                                </span>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 p-12 text-center">
                <span class="inline-flex w-16 h-16 rounded-2xl bg-slate-100 text-slate-400 items-center justify-center mb-4"><i class="bi bi-inbox text-3xl"></i></span>
                <p class="text-slate-500 text-lg">No notifications yet</p>
                <p class="text-slate-400 text-sm mt-2">You'll receive notifications about placement drives, deadlines, and updates here</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Mark as Read Functionality -->
<script>
document.querySelectorAll('.mark-read-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const notificationId = this.dataset.notificationId;
    const btnElement = this;
    const notificationCard = this.closest('.notification-item');

    fetch(`/student/notifications/${notificationId}/read`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Remove glow animation with smooth transition
        notificationCard.classList.remove('glow-notification');
        notificationCard.classList.add('read-notification');

        // Remove glow dot
        const glowDot = notificationCard.querySelector('.glow-dot');
        if (glowDot) {
          glowDot.style.animation = 'none';
          glowDot.style.opacity = '0';
          setTimeout(() => glowDot.remove(), 300);
        }

        // Replace button with animated "Read" badge
        btnElement.outerHTML = `
          <span class="px-3 py-2 rounded-lg bg-emerald-500/30 text-emerald-300 text-sm font-medium border border-emerald-400/50 flex items-center gap-2 whitespace-nowrap">
            <span class="checkmark-icon">âœ“</span> Read
          </span>
        `;

        // Update unread count
        const unreadBadge = document.querySelector('[class*="New"]');
        if (unreadBadge) {
          const countMatch = unreadBadge.textContent.match(/\d+/);
          if (countMatch) {
            let count = parseInt(countMatch[0]) - 1;
            if (count > 0) {
              unreadBadge.innerHTML = `<span class="glow-dot"></span> ${count} New`;
            } else {
              unreadBadge.remove();
            }
          }
        }
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error marking notification as read');
    });
  });
});
</script>

<%- include('../partials/footer') %>
