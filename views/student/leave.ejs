<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-calendar-check"></i></span>
                Leave Management
            </h1>
        </div>

        <div class="p-4 rounded-xl bg-amber-500/20 border border-amber-400/40 text-amber-100 flex items-start gap-3 mb-6">
            <i class="bi bi-exclamation-triangle text-xl flex-shrink-0 mt-0.5"></i>
            <div><strong>Leave Policy:</strong> Leave can be applied only for today or earlier dates. Future-dated leave requests are not allowed.</div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-plus-circle"></i> Apply for Leave</h2>
                    </div>
                    <div class="p-6">
                        <form action="/student/leave" method="POST" class="space-y-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Date</label>
                                <input type="date" name="date" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Reason</label>
                                <textarea name="reason" rows="3" placeholder="Enter reason for leave" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none"></textarea>
                            </div>
                            <button type="submit" class="w-full py-3 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow flex items-center justify-center gap-2">
                                <i class="bi bi-send"></i> Apply Leave
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-sky-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-list-check"></i> Leave History</h2>
                    </div>
                    <div class="p-6">
                        <% if (leaves && leaves.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left">
                                    <thead>
                                        <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                                            <th class="pb-3 pr-4">Date</th>
                                            <th class="pb-3 pr-4">Reason</th>
                                            <th class="pb-3 pr-4">Status</th>
                                            <th class="pb-3">Type</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-row-hover">
                                        <% leaves.forEach(leave => { %>
                                            <tr class="border-b border-slate-100">
                                                <td class="py-3 pr-4"><%= new Date(leave.date).toLocaleDateString() %></td>
                                                <td class="py-3 pr-4 text-slate-600"><%= leave.reason %></td>
                                                <td class="py-3 pr-4">
                                                    <% if (leave.status === 'approved-by-hod') { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-emerald-100 text-emerald-700 text-sm font-medium">Approved</span>
                                                    <% } else if (leave.status === 'approved-by-coordinator') { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-sky-100 text-sky-700 text-sm font-medium">Approved by Coordinator</span>
                                                    <% } else if (leave.status === 'approved-by-advisor') { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-amber-100 text-amber-700 text-sm font-medium">Approved by Advisor</span>
                                                    <% } else if (leave.status === 'rejected') { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-rose-100 text-rose-700 text-sm font-medium">Rejected</span>
                                                    <% } else { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-slate-100 text-slate-600 text-sm font-medium">Pending</span>
                                                    <% } %>
                                                </td>
                                                <td class="py-3">
                                                    <% if (leave.isAutoApplied) { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-primary-100 text-primary-700 text-sm font-medium">Auto</span>
                                                    <% } else { %>
                                                        <span class="inline-flex px-2.5 py-1 rounded-lg bg-slate-100 text-slate-600 text-sm font-medium">Manual</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-slate-500 text-center py-8">No leave records found</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
