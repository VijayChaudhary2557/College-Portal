<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-people"></i></span>
                Faculty Management
            </h1>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-plus-circle"></i> Add New Faculty</h2>
            </div>
            <div class="p-6">
                <form action="/admin/faculty" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Name</label>
                        <input type="text" name="name" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Email</label>
                        <input type="email" name="email" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Position</label>
                        <select name="position" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <option value="hod">HOD</option>
                            <option value="coordinator">Coordinator</option>
                            <option value="class-advisor">Class Advisor / Faculty</option>
                            <option value="placement-manager">Placement Manager</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Assigned Courses</label>
                        <select name="courses" multiple class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <% courses.forEach(course => { %>
                                <option value="<%= course._id %>"><%= course.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="md:col-span-2">
                        <button type="submit" class="px-6 py-2.5 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">Add Faculty</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 bg-emerald-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-list"></i> All Faculty</h2>
            </div>
            <div class="p-6 overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                            <th class="pb-3 pr-4">Name</th>
                            <th class="pb-3 pr-4">Email</th>
                            <th class="pb-3 pr-4">Position</th>
                            <th class="pb-3">Faculty ID</th>
                        </tr>
                    </thead>
                    <tbody class="table-row-hover">
                        <% faculties.forEach(faculty => { %>
                            <tr class="border-b border-slate-100">
                                <td class="py-3 pr-4 font-medium"><%= faculty.name %></td>
                                <td class="py-3 pr-4"><%= faculty.email %></td>
                                <td class="py-3 pr-4"><span class="inline-flex px-2.5 py-1 rounded-lg bg-sky-100 text-sky-700 text-sm font-medium"><%= faculty.position %></span></td>
                                <td class="py-3"><%= faculty.facultyId %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
