<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-speedometer2"></i></span>
                Admin Dashboard
            </h1>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 mb-8">
            <div class="rounded-2xl bg-gradient-to-br from-primary-500 to-primary-700 p-6 text-white shadow-soft card-hover border border-primary-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-primary-100 text-sm font-medium">Total Students</p>
                        <p class="text-3xl font-bold mt-1"><%= students %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-people text-xl"></i></span>
                </div>
            </div>
            <div class="rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 p-6 text-white shadow-soft card-hover border border-emerald-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-emerald-100 text-sm font-medium">Total Faculty</p>
                        <p class="text-3xl font-bold mt-1"><%= faculties %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-person-badge text-xl"></i></span>
                </div>
            </div>
            <div class="rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 p-6 text-white shadow-soft card-hover border border-amber-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-amber-100 text-sm font-medium">Active Courses</p>
                        <p class="text-3xl font-bold mt-1"><%= courses %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-book text-xl"></i></span>
                </div>
            </div>
            <div class="rounded-2xl bg-gradient-to-br from-rose-500 to-red-600 p-6 text-white shadow-soft card-hover border border-rose-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-rose-100 text-sm font-medium">Pending Admissions</p>
                        <p class="text-3xl font-bold mt-1"><%= pendingAdmissions %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-hourglass-split text-xl"></i></span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/admin/courses" class="group block rounded-2xl bg-white/95 backdrop-blur p-6 shadow-soft card-hover border border-slate-200/80">
                <div class="flex flex-col items-center text-center">
                    <span class="w-14 h-14 rounded-xl bg-primary-100 text-primary-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"><i class="bi bi-book-fill text-2xl"></i></span>
                    <h3 class="text-lg font-bold text-slate-800">Manage Courses</h3>
                    <p class="text-slate-500 text-sm mt-1">Add courses, assign HOD & Coordinator</p>
                    <span class="mt-4 inline-flex items-center gap-2 text-primary-600 font-semibold text-sm">Go to Courses <i class="bi bi-arrow-right"></i></span>
                </div>
            </a>
            <a href="/admin/faculty" class="group block rounded-2xl bg-white/95 backdrop-blur p-6 shadow-soft card-hover border border-slate-200/80">
                <div class="flex flex-col items-center text-center">
                    <span class="w-14 h-14 rounded-xl bg-emerald-100 text-emerald-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"><i class="bi bi-people-fill text-2xl"></i></span>
                    <h3 class="text-lg font-bold text-slate-800">Manage Faculty</h3>
                    <p class="text-slate-500 text-sm mt-1">Add and manage faculty members</p>
                    <span class="mt-4 inline-flex items-center gap-2 text-emerald-600 font-semibold text-sm">Go to Faculty <i class="bi bi-arrow-right"></i></span>
                </div>
            </a>
            <a href="/admin/admissions" class="group block rounded-2xl bg-white/95 backdrop-blur p-6 shadow-soft card-hover border border-slate-200/80">
                <div class="flex flex-col items-center text-center">
                    <span class="w-14 h-14 rounded-xl bg-amber-100 text-amber-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"><i class="bi bi-person-plus-fill text-2xl"></i></span>
                    <h3 class="text-lg font-bold text-slate-800">Review Admissions</h3>
                    <p class="text-slate-500 text-sm mt-1">Approve or reject applications</p>
                    <span class="mt-4 inline-flex items-center gap-2 text-amber-600 font-semibold text-sm">Go to Admissions <i class="bi bi-arrow-right"></i></span>
                </div>
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
