<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-book"></i></span>
                Course Management
            </h1>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
            <div class="lg:col-span-1">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-plus-circle"></i> Add New Course</h2>
                    </div>
                    <div class="p-6">
                        <form action="/admin/courses" method="POST" class="space-y-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Course Name</label>
                                <input type="text" name="name" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Course Code</label>
                                <input type="text" name="code" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Description</label>
                                <textarea name="description" rows="3" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none"></textarea>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-1">Duration (Years)</label>
                                <input type="number" name="duration" value="3" min="1" max="5" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none">
                            </div>
                            <button type="submit" class="w-full py-3 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">Add Course</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2">
                <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200 bg-emerald-500 text-white">
                        <h2 class="font-bold flex items-center gap-2"><i class="bi bi-list"></i> All Courses</h2>
                    </div>
                    <div class="p-6 overflow-x-auto">
                        <table class="w-full text-left">
                            <thead>
                                <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                                    <th class="pb-3 pr-4">Name</th>
                                    <th class="pb-3 pr-4">Code</th>
                                    <th class="pb-3 pr-4">Duration</th>
                                    <th class="pb-3 pr-4">HOD</th>
                                    <th class="pb-3">Coordinator</th>
                                </tr>
                            </thead>
                            <tbody class="table-row-hover">
                                <% courses.forEach(course => { %>
                                    <tr class="border-b border-slate-100">
                                        <td class="py-3 pr-4 font-medium"><%= course.name %></td>
                                        <td class="py-3 pr-4"><%= course.code %></td>
                                        <td class="py-3 pr-4"><%= course.duration %> yrs</td>
                                        <td class="py-3 pr-4">
                                            <% faculties.forEach(faculty => { if(faculty.position == "hod" && faculty.course && faculty.course.name == course.name) { %>
                                                <span class="inline-flex px-2.5 py-1 rounded-lg bg-primary-100 text-primary-700 text-sm font-medium"><%= faculty.name %></span>
                                            <% } }); %>
                                            <button type="button" class="ml-1 text-primary-600 hover:underline text-sm" data-bs-toggle="modal" data-bs-target="#assignHodModal<%= course._id %>">Assign</button>
                                        </td>
                                        <td class="py-3">
                                            <% faculties.forEach(faculty => { if(faculty.position == "coordinator" && faculty.course && faculty.course.name == course.name) { %>
                                                <span class="inline-flex px-2.5 py-1 rounded-lg bg-sky-100 text-sky-700 text-sm font-medium"><%= faculty.name %></span>
                                            <% } }); %>
                                            <button type="button" class="ml-1 text-sky-600 hover:underline text-sm" data-bs-toggle="modal" data-bs-target="#assignCoordinatorModal<%= course._id %>">Assign</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <% courses.forEach(course => { %>
        <div class="modal fade" id="assignHodModal<%= course._id %>" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content rounded-2xl border-0 shadow-xl">
                    <div class="modal-header border-b border-slate-200">
                        <h5 class="modal-title font-bold">Assign HOD — <%= course.name %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/admin/courses/<%= course._id %>/assign-hod" method="POST">
                        <div class="modal-body">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Select HOD</label>
                            <select name="hodId" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                                <option value="">— Remove HOD —</option>
                                <% faculties.forEach(faculty => { %>
                                    <option value="<%= faculty._id %>" <%= course.hod && course.hod._id.toString() === faculty._id.toString() ? 'selected' : '' %>><%= faculty.name %> (<%= faculty.email %>) - <%= faculty.position %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="modal-footer border-t border-slate-200 gap-2">
                            <button type="button" class="px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="px-4 py-2 rounded-xl bg-primary-500 text-white font-medium">Assign HOD</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="assignCoordinatorModal<%= course._id %>" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content rounded-2xl border-0 shadow-xl">
                    <div class="modal-header border-b border-slate-200">
                        <h5 class="modal-title font-bold">Assign Coordinator — <%= course.name %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/admin/courses/<%= course._id %>/assign-coordinator" method="POST">
                        <div class="modal-body">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Select Coordinator</label>
                            <select name="coordinatorId" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                                <option value="">— Remove Coordinator —</option>
                                <% faculties.forEach(faculty => { %>
                                    <option value="<%= faculty._id %>" <%= course.coordinator && course.coordinator._id.toString() === faculty._id.toString() ? 'selected' : '' %>><%= faculty.name %> (<%= faculty.email %>) - <%= faculty.position %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="modal-footer border-t border-slate-200 gap-2">
                            <button type="button" class="px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="px-4 py-2 rounded-xl bg-sky-500 text-white font-medium">Assign Coordinator</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>
