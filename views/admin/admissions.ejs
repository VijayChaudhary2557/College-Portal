<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-person-plus"></i></span>
                Student Admissions
            </h1>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-slate-200 bg-amber-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-hourglass-split"></i> Pending Admissions</h2>
            </div>
            <div class="p-6 overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                            <th class="pb-3 pr-4">Name</th>
                            <th class="pb-3 pr-4">Email</th>
                            <th class="pb-3 pr-4">Course</th>
                            <th class="pb-3 pr-4">Year</th>
                            <th class="pb-3 pr-4">%</th>
                            <th class="pb-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-row-hover">
                        <% pending.forEach(student => { %>
                            <tr class="border-b border-slate-100">
                                <td class="py-3 pr-4 font-medium"><%= student.name %></td>
                                <td class="py-3 pr-4"><%= student.email %></td>
                                <td class="py-3 pr-4"><%= student.course ? student.course.name : '-' %></td>
                                <td class="py-3 pr-4"><%= student.year %></td>
                                <td class="py-3 pr-4"><%= student.admissionData ? student.admissionData.percentage : '-' %>%</td>
                                <td class="py-3 flex gap-2">
                                    <form action="/admin/admissions/<%= student._id %>/approve" method="POST" class="inline">
                                        <button type="submit" class="px-3 py-1.5 rounded-lg bg-emerald-500 hover:bg-emerald-600 text-white text-sm font-medium">Approve</button>
                                    </form>
                                    <form action="/admin/admissions/<%= student._id %>/reject" method="POST" class="inline">
                                        <button type="submit" class="px-3 py-1.5 rounded-lg bg-rose-500 hover:bg-rose-600 text-white text-sm font-medium">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 bg-emerald-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-check-circle"></i> Recently Approved</h2>
            </div>
            <div class="p-6 overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                            <th class="pb-3 pr-4">Name</th>
                            <th class="pb-3 pr-4">Email</th>
                            <th class="pb-3 pr-4">Course</th>
                            <th class="pb-3 pr-4">Student ID</th>
                            <th class="pb-3">Status</th>
                        </tr>
                    </thead>
                    <tbody class="table-row-hover">
                        <% approved.forEach(student => { %>
                            <tr class="border-b border-slate-100">
                                <td class="py-3 pr-4 font-medium"><%= student.name %></td>
                                <td class="py-3 pr-4"><%= student.email %></td>
                                <td class="py-3 pr-4"><%= student.course ? student.course.name : '-' %></td>
                                <td class="py-3 pr-4"><%= student.studentId || 'Pending' %></td>
                                <td class="py-3"><span class="inline-flex px-2.5 py-1 rounded-lg bg-emerald-100 text-emerald-700 text-sm font-medium">Approved</span></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
