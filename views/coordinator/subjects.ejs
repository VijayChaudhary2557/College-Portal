<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-book"></i></span>
                Subject Management
            </h1>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-slate-200 bg-primary-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-plus-circle"></i> Add New Subject</h2>
            </div>
            <div class="p-6">
                <form action="/coordinator/subjects" method="POST" class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-2xl">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Subject Name</label>
                        <input type="text" name="name" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Year</label>
                        <select name="year" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <option value="1">Year 1</option>
                            <option value="2">Year 2</option>
                            <option value="3">Year 3</option>
                            <option value="4">Year 4</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Credits</label>
                        <input type="number" name="credits" value="3" min="1" max="10" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                    <div class="sm:col-span-2">
                        <button type="submit" class="px-6 py-2.5 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">Add Subject</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 bg-emerald-500 text-white">
                <h2 class="font-bold flex items-center gap-2"><i class="bi bi-list"></i> All Subjects</h2>
            </div>
            <div class="p-6 overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                            <th class="pb-3 pr-4">Name</th>
                            <th class="pb-3 pr-4">Code</th>
                            <th class="pb-3 pr-4">Year</th>
                            <th class="pb-3 pr-4">Credits</th>
                            <th class="pb-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-row-hover">
                        <% subjects.forEach(subject => { %>
                            <tr class="border-b border-slate-100">
                                <td class="py-3 pr-4 font-medium"><%= subject.name %></td>
                                <td class="py-3 pr-4"><%= subject.code %></td>
                                <td class="py-3 pr-4"><span class="inline-flex px-2.5 py-1 rounded-lg bg-sky-100 text-sky-700 text-sm font-medium">Year <%= subject.year %></span></td>
                                <td class="py-3 pr-4"><%= subject.credits %></td>
                                <td class="py-3 flex gap-2">
                                    <button type="button" class="text-primary-600 hover:underline text-sm font-medium" data-bs-toggle="modal" data-bs-target="#assignFacultyModal<%= subject._id %>">Assign Faculty</button>
                                    <button type="button" class="text-amber-600 hover:underline text-sm font-medium" data-bs-toggle="modal" data-bs-target="#editSubjectModal<%= subject._id %>">Edit</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% subjects.forEach(subject => { %>
<div class="modal fade" id="assignFacultyModal<%= subject._id %>" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-2xl border-0 shadow-xl">
            <div class="modal-header border-b border-slate-200">
                <h5 class="modal-title font-bold">Assign Faculty — <%= subject.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/coordinator/subjects/<%= subject._id %>/assign-faculty" method="POST">
                <div class="modal-body">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Select Faculty</label>
                    <select name="facultyId" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                        <option value="">— Remove Faculty —</option>
                        <% faculties.forEach(faculty => { %>
                            <option value="<%= faculty._id %>" <%= subject.faculty && subject.faculty._id.toString() === faculty._id.toString() ? 'selected' : '' %>><%= faculty.name %> (<%= faculty.email %>)</option>
                        <% }); %>
                    </select>
                </div>
                <div class="modal-footer border-t border-slate-200 gap-2">
                    <button type="button" class="px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-4 py-2 rounded-xl bg-primary-500 text-white font-medium">Assign</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editSubjectModal<%= subject._id %>" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-2xl border-0 shadow-xl">
            <div class="modal-header border-b border-slate-200">
                <h5 class="modal-title font-bold">Edit — <%= subject.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/coordinator/subjects/<%= subject._id %>/update" method="POST">
                <div class="modal-body space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Subject Name</label>
                        <input type="text" name="name" value="<%= subject.name %>" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Subject Code</label>
                        <input type="text" name="code" value="<%= subject.code %>" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Year</label>
                        <select name="year" required class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <option value="1" <%= subject.year === 1 ? 'selected' : '' %>>Year 1</option>
                            <option value="2" <%= subject.year === 2 ? 'selected' : '' %>>Year 2</option>
                            <option value="3" <%= subject.year === 3 ? 'selected' : '' %>>Year 3</option>
                            <option value="4" <%= subject.year === 4 ? 'selected' : '' %>>Year 4</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Section (Optional)</label>
                        <select name="section" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                            <option value="">All Sections</option>
                            <% sections.forEach(section => { %>
                                <option value="<%= section._id %>" <%= subject.section && subject.section._id.toString() === section._id.toString() ? 'selected' : '' %>><%= section.name %> (Year <%= section.year %>)</option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Credits</label>
                        <input type="number" name="credits" value="<%= subject.credits %>" min="1" max="10" class="w-full px-4 py-2.5 rounded-xl border-2 border-slate-200 focus:border-primary-500 outline-none">
                    </div>
                </div>
                <div class="modal-footer border-t border-slate-200 gap-2">
                    <button type="button" class="px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-4 py-2 rounded-xl bg-amber-500 text-white font-medium">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% }); %>

<%- include('../partials/footer') %>
