<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="min-h-screen gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
                <span class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center"><i class="bi bi-speedometer2"></i></span>
                Coordinator Dashboard
            </h1>
            <p class="text-slate-300 mt-1">Course: <%= user ? user.course.name : 'Not Assigned' %></p>
            <% if (!user.course) { %>
                <div class="mt-4 p-4 rounded-xl bg-amber-500/20 border border-amber-400/40 text-amber-100 flex items-start gap-3">
                    <i class="bi bi-exclamation-triangle text-xl flex-shrink-0 mt-0.5"></i>
                    <div>
                        <strong>Course Not Assigned!</strong><br>
                        Please contact Admin. Admin can assign from: <strong>Admin Dashboard → Courses → Assign Coordinator</strong>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-5 mb-8">
            <div class="rounded-2xl bg-gradient-to-br from-primary-500 to-primary-700 p-6 text-white shadow-soft card-hover border border-primary-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-primary-100 text-sm font-medium">Total Sections</p>
                        <p class="text-3xl font-bold mt-1"><%= sections ? sections.length : 0 %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-people text-xl"></i></span>
                </div>
            </div>
            <div class="rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 p-6 text-white shadow-soft card-hover border border-emerald-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-emerald-100 text-sm font-medium">Total Faculty</p>
                        <p class="text-3xl font-bold mt-1"><%= faculties ? faculties.length : 0 %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-person-badge text-xl"></i></span>
                </div>
            </div>
            <div class="rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 p-6 text-white shadow-soft card-hover border border-amber-400/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-amber-100 text-sm font-medium">Total Subjects</p>
                        <p class="text-3xl font-bold mt-1"><%= subjects ? subjects.length : 0 %></p>
                    </div>
                    <span class="w-12 h-12 rounded-xl bg-white/20 flex items-center justify-center"><i class="bi bi-book text-xl"></i></span>
                </div>
            </div>
        </div>

        <div class="rounded-2xl bg-white/95 backdrop-blur shadow-soft border border-slate-200/80 overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-slate-200 bg-amber-50/80">
                <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2"><i class="bi bi-hourglass-split text-amber-600"></i> Pending Leave Approvals</h2>
            </div>
            <div class="p-6">
                <% if (pendingLeaves && pendingLeaves.length > 0) { %>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead>
                                <tr class="border-b border-slate-200 text-slate-600 text-sm font-semibold">
                                    <th class="pb-3 pr-4">Student</th>
                                    <th class="pb-3 pr-4">Date</th>
                                    <th class="pb-3 pr-4">Reason</th>
                                    <th class="pb-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-row-hover">
                                <% pendingLeaves.forEach(leave => { %>
                                    <tr class="border-b border-slate-100">
                                        <td class="py-3 pr-4 font-medium"><%= leave.student.name %></td>
                                        <td class="py-3 pr-4"><%= new Date(leave.date).toLocaleDateString() %></td>
                                        <td class="py-3 pr-4 text-slate-600"><%= leave.reason %></td>
                                        <td class="py-3 flex gap-2">
                                            <form action="/coordinator/leave/<%= leave._id %>/approve" method="POST" class="inline">
                                                <button type="submit" class="px-3 py-1.5 rounded-lg bg-emerald-500 hover:bg-emerald-600 text-white text-sm font-medium">Approve</button>
                                            </form>
                                            <button type="button" onclick="rejectLeave('<%= leave._id %>')" class="px-3 py-1.5 rounded-lg bg-rose-500 hover:bg-rose-600 text-white text-sm font-medium">Reject</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-slate-500 text-center py-8">No pending leaves</p>
                <% } %>
            </div>
        </div>

        <div class="flex flex-wrap gap-4">
            <% if (user.course) { %>
                <a href="/coordinator/subjects" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-primary-500 hover:bg-primary-600 text-white font-semibold btn-glow">
                    <i class="bi bi-book"></i> Manage Subjects
                </a>
                <a href="/coordinator/timetable" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-emerald-500 hover:bg-emerald-600 text-white font-semibold btn-glow">
                    <i class="bi bi-calendar3"></i> Manage Timetable
                </a>
            <% } else { %>
                <button disabled title="Course not assigned" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-slate-300 text-slate-500 font-semibold cursor-not-allowed">
                    <i class="bi bi-book"></i> Manage Subjects
                </button>
                <button disabled title="Course not assigned" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-slate-300 text-slate-500 font-semibold cursor-not-allowed">
                    <i class="bi bi-calendar3"></i> Manage Timetable
                </button>
            <% } %>
        </div>
    </div>
</div>

<script>
function rejectLeave(leaveId) {
    var reason = prompt('Enter rejection reason:');
    if (reason) {
        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '/coordinator/leave/' + leaveId + '/reject';
        var input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'reason';
        input.value = reason;
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

<%- include('../partials/footer') %>
